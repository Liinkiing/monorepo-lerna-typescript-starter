{
  "name": "@monorepo-lerna-typescript-starter/frontend",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --no-error-on-unmatched-pattern --cache --fix --report-unused-disable-directives src/**/*.{js,ts,jsx,tsx}",
    "ts:check": "tsc --noEmit",
    "test": "jest --runInBand --coverage=false",
    "test:ci": "yarn test --ci",
    "test:watch": "yarn test --watch",
    "cy:open": "yarn --cwd cypress cy:open",
    "cy:run": "yarn --cwd cypress cy:run",
    "cy:run:cy": "yarn --cwd cypress cy:run:ci"
  },
  "dependencies": {
    "@styled-system/should-forward-prop": "^5.1.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "babel-jest": "^26.3.0",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^2.6.13",
    "jest": "^26.4.2",
    "jest-styled-components": "^7.0.3",
    "next": "^9.5.3",
    "next-compose-plugins": "^2.2.0",
    "next-fonts": "^1.4.0",
    "next-images": "^1.4.1",
    "nprogress": "^0.2.0",
    "polished": "^3.6.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.2.0",
    "styled-system": "^5.1.5",
    "ts-jest": "^26.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.3",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__should-forward-prop": "^5.1.1",
    "@types/webpack": "^4.41.22",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest -c jest.config.js --bail --runInBand --findRelatedTests --coverage=false"
    ]
  }
}
